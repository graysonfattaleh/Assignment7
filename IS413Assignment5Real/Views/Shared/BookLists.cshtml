@model IS413Assignment5Real.Models.ViewModels.BookListViewModel
<table id="booktable" class="table table-dark">
    <thead class="text-center">
        <tr class="text-center">
            <th>Title</th>
            <th>Classification</th>
            <th>Author</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody class="text-center">
        <!--makes a row for each book entry-->
        @foreach (Book book in Model.Books)
        {


            <tr class="text-center tblrow" id=@book.BookId>
                <td>@book.Title</td>
                <td>@book.Classification</td>
                <td>@book.AuthorLast</td>
                <td>@book.Price</td>
            </tr>
        }
    </tbody>
</table>

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn ank" page-class-normal="btn-outline-dark" page-url-filterer="@Model.CurrentCategory"
     page-class-selected="btn-primary "></div>
<br />